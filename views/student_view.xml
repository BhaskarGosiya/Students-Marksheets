<openerp>
	<data>
		<!--  form view  -->
		<record id="form_view_student_student" model="ir.ui.view">
			<field name="name">form.view.student.student</field>
			<field name="model">student.student</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group cols="4">
							<field name="name"/>
							<field name="city"/>
							<field name="email"/>
							<field name="mobile"/>
							<field name="birthday"/>
							<field name="age"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- tree view -->
		<record id="tree_view_student_student" model="ir.ui.view">
			<field name="name">tree.view.student.student</field>
			<field name="model">student.student</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="city"/>
					<field name="email"/>
					<field name="mobile"/>
					<field name="birthday"/>
					<field name="age"/>
				</tree>
			</field>
		</record>

		<!-- action -->
		<record id="action_student_student" model="ir.actions.act_window">
			<field name="name">Students</field>
			<field name="res_model">student.student</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="tree_view_student_student"/>
		</record>

	</data>
</openerp>
